{% extends 'base_forms.html.twig' %}

{% block title %}Paciente index{% endblock %}

{% block form_title %}Paciente CRUD{% endblock %}

{% block body %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Direccion</th>
                <th>Telefono</th>
                <th>Alergias</th>
                <th>Enfermedades_cronicas</th>
                <th>Cirugias</th>
                <th>Covid19</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for paciente in pacientes %}
            <tr>
                <td>{{ paciente.id }}</td>
                <td>{{ paciente.nombre }}</td>
                <td>{{ paciente.apellido }}</td>
                <td>{{ paciente.direccion }}</td>
                <td>{{ paciente.telefono }}</td>
                <td>{{ paciente.alergias }}</td>
                <td>{{ paciente.enfermedadesCronicas }}</td>
                <td>{{ paciente.cirugias }}</td>
                <td>{{ paciente.covid19 ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('paciente_show', {'id': paciente.id}) }}">show</a>
                    <a href="{{ path('paciente_edit', {'id': paciente.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('paciente_new') }}">Create new</a>
{% endblock %}
